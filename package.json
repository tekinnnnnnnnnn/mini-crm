{
  "name": "mini-crm",
  "version": "0.1.0",
  "description": "MiniCRM - Yarım kalmış müşteri ve sipariş yönetim sistemi (senaryo için).",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "test:smoke": "jest --runInBand tests/customers.test.js tests/orders.test.js tests/products.test.js",
    "lint": "eslint .",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:status": "sequelize-cli db:migrate:status",
    "etl:customers": "node scripts/etl/import-customers.js"
  },
  "dependencies": {
    "express": "^4.19.0",
    "sequelize": "^6.37.0",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "dotenv": "^16.4.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4",
    "nodemon": "^3.1.0",
    "sequelize-cli": "^6.6.2"
  }
}
