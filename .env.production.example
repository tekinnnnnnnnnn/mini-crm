# Production örneği (BU DOSYAYI REPOYA SECRET İÇERECEK ŞEKİLDE KOYMAYIN)
NODE_ENV=production
APP_PORT=3000

# Tercih edilen yöntem: tek satır connection string
DATABASE_URL=

# Alternatif (DATABASE_URL yoksa):
# DB_HOST=
# DB_PORT=5432
# DB_NAME=
# DB_USER=
# DB_PASS=

DB_SSL=true

# Log
LOG_LEVEL=info
LOG_REQUESTS=warn
SLOW_REQUEST_MS=1000
LOG_SQL=false

# Order
ORDER_ALLOW_BACKORDER=false

